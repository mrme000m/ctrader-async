# cTrader API Credentials
# Copy this file to .env and fill in your credentials

# OAuth credentials from cTrader Open API portal
CTRADER_CLIENT_ID=your_client_id_here
CTRADER_CLIENT_SECRET=your_client_secret_here
CTRADER_ACCESS_TOKEN=your_access_token_here

# Trading account ID
CTRADER_ACCOUNT_ID=12345

# Server type: "demo" or "live"
CTRADER_HOST_TYPE=demo

# Optional: Connection settings
# CTRADER_CONNECTION_TIMEOUT=30
# CTRADER_REQUEST_TIMEOUT=30
# CTRADER_AUTH_TIMEOUT=60

# Optional: Reconnection settings
# CTRADER_RECONNECT_ENABLED=True
# CTRADER_RECONNECT_MAX_ATTEMPTS=10
# CTRADER_RECONNECT_BASE_DELAY=1.0
# CTRADER_RECONNECT_MAX_DELAY=300.0

# Optional: Rate limiting
# CTRADER_RATE_LIMIT_TRADING=50
# CTRADER_RATE_LIMIT_HISTORICAL=5

# Optional: Logging
# CTRADER_LOG_LEVEL=INFO
# CTRADER_LOG_MESSAGES=False

# Extra connection diagnostics (verbose connect/reconnect logs)
# 0/1, false/true, no/yes, off/on
CTRADER_CONNECTION_DEBUG=0
